<% provide(:title, "Edit Task") %>
<h1>タスク編集</h1></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: edit_user_task_path, local: true) do |f| %>

      <%= f.label :name, class: "label-form" %>
      <%= f.email_field :name, class: 'form-control' %>

      <%= f.label :description, class: "label-form" %>
      <%= f.password_field :description, class: 'form-control' %>

      <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-form" %>
    <% end %>
  </div>
</div>