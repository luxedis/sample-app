<% provide(:title, "New Task") %>
<h1>タスク新規作成</h1></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: new_user_task_path, local: true) do |f| %>

      <%= f.label :email, t(".email"), class: "label-form" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t(".password"), class: "label-form" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-form" %>
    <% end %>
  </div>
</div>