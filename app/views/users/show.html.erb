<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-borderd" id="table-user">
      <tr>
        <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
        <td class="col-md-9"><%= @user.id %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :name %></td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :email %></td>
        <td><%= @user.email %></td>
      </tr>
        <tr>
        <th class="active"><%= User.human_attribute_name :created_at %></td>
        <td><%= l(@user.created_at, format: :long) %></td>
      </tr>
    </table>
  </div>    
</div>